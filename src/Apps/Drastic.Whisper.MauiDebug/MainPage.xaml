<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Drastic.Whisper.MauiDebug.MainPage">

    <Grid Margin="15"
          RowSpacing="5"
          RowDefinitions="Auto, Auto, *">

        <Grid Grid.Row="0" RowDefinitions="50, Auto, 50, Auto, Auto" RowSpacing="5">
            <Picker ItemsSource="{Binding ModelService.AvailableModels}" SelectedItem="{Binding ModelService.SelectedModel, Mode=TwoWay}" ItemDisplayBinding="{Binding Name}"/>
            <Button Grid.Row="1" Text="Download Model" Clicked="OnCounterClicked" />
            <Button Grid.Row="3" Text="Record" Command="{Binding RecordCommand}"/>
        </Grid>

        <ListView HasUnevenRows="True" Grid.Row="2" ItemsSource="{Binding Subtitles}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid RowDefinitions="*, Auto">
                            <Label Text="{Binding Text}" />
                            <Label FontSize="Caption" Grid.Row="1" Text="{Binding Time}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</ContentPage>
