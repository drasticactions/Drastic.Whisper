<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Drastic.Whisper.MauiUI.Pages.WhisperDownloadModelPage"
             xmlns:translations="clr-namespace:Drastic.Whisper.Translations;assembly=Drastic.Whisper"
             Title="WhisperDownloadModelPage">
    <Grid RowDefinitions="Auto, *, Auto">
        <Grid Margin="15">
            <Label Text="{x:Static translations:Common.WhisperModelHeader}" FontSize="Title" VerticalOptions="Center" HorizontalOptions="Center" />
        </Grid>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="5" BindableLayout.ItemsSource="{Binding Downloads}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeShape="RoundRectangle 5" Margin="5" >
                            <Grid Margin="15" ColumnSpacing="5" ColumnDefinitions="*, *, Auto">
                                <Grid Margin="5" RowSpacing="5" RowDefinitions="Auto, Auto">
                                    <Label FontAttributes="Bold" Text="{Binding Model.Name}" />
                                    <Label Grid.Row="1" FontSize="Caption" Text="{Binding Model.Description}" />
                                </Grid>
                                <ProgressBar IsVisible="{Binding DownloadStarted}" Progress="{Binding Precent}" Grid.Column="1" VerticalOptions="Center" />
                                <Button MinimumWidthRequest="100" IsVisible="{Binding ShowDownloadButton}"  VerticalOptions="Center" Grid.Column="2" Text="{x:Static translations:Common.DownloadButtonLabel}"  Command="{Binding DownloadCommand}"/>
                                <Button MinimumWidthRequest="100" IsVisible="{Binding ShowCancelButton}" VerticalOptions="Center" Grid.Column="2" Text="{x:Static translations:Common.CancelButton}" BackgroundColor="Red" TextColor="White"  Command="{Binding CancelCommand}"/>
                                <Button MinimumWidthRequest="100" IsVisible="{Binding ShowDeleteButton}" VerticalOptions="Center" Grid.Column="2" Text="{x:Static translations:Common.DeleteButton}" BackgroundColor="Red" TextColor="White"  Command="{Binding DeleteCommand}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
        </ScrollView>
        <Grid Margin="15" Grid.Row="2">
            <Button VerticalOptions="Center" HorizontalOptions="Center" Text="{x:Static translations:Common.CloseButton}" Clicked="Button_Clicked"/>
        </Grid>
    </Grid>
</ContentPage>